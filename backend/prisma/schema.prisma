generator client {
	provider = "prisma-client-js"
}
datasource db {
	provider = "sqlite"
	url      = env("DATABASE_URL")
}

enum Status {
	TODO
	IN_PROGRESS
	DONE
	TRASH
}
enum Priority {
	LOW
	MEDIUM
	HIGH
}

model Task {
	id          String   @id @default(cuid())
	title       String
	description String?
			status      Status    @default(TODO)
			priority    Priority  @default(MEDIUM)
	dueDate     DateTime?
	createdAt   DateTime  @default(now())
	updatedAt   DateTime  @updatedAt
}
